<div class="{{if right "timeline-inverted" ""}} timeline-badge">
  <a><i class="fa fa-circle"></i></a>
</div>
<div class="timeline-panel">
  <div class="timeline-heading">
    <h4 class="mt-2">{{title}}</h4>
  </div>
  <div class="timeline-body">
    {{yield (hash
              description=(component "timeline-item/description")
              technos=(component "timeline-item/technos")
            )}}
  </div>
  <div class="timeline-footer">
    <p class="text-right">{{period}}</p>
  </div>
</div>